@model IEnumerable<KiemTra_NguyenHuuLuan.Models.HocPhan>
@{
    ViewBag.Title = "HocPhan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>HocPhan</h2>
<table class="table">
    <tr>
        <th>
            Họ tên
        </th>
        <th>
            Giới tính
        </th>
        <th>
            Số tín chỉ
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaHP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenHP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoTinChi)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.MaHP }) |
                @Html.ActionLink("Details", "Detail", new { id = item.MaHP }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.MaHP })
            </td>
        </tr>
    }

</table>

<script>
    $(".btnDatMua").click(function () {
        console.log("hihihi");
        var id = $(this).attr("data-id")
        $.ajax({

            type: "GET",
            data: { id: id },
            url: "/HocPhanNguoiDung/ThemGioHang",
            success: function (status) {

                alert("Đã thêm vào giỏ hàng")
            },
            error: function (err) {
                alert('Error ', err.statusText);
            }
        })
    })

</script>