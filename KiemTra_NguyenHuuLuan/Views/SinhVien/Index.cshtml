@model IEnumerable<KiemTra_NguyenHuuLuan.Models.SinhVien>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Họ tên
        </th>
        <th>
            Giới tính
        </th>
        <th>
            Ngày sinh
        </th>
        <th>
            Hình ảnh
        </th>
        <th>
            Mã ngành
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.HoTen)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GioiTinh)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NgaySinh)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.Hinh)

        </td>*@
        <td><img src="@item.Hinh" width="95" title="cover" /></td>
        <td>
            @Html.DisplayFor(modelItem => item.MaNganh)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.MaSV }) |
            @Html.ActionLink("Details", "Detail", new { id = item.MaSV }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.MaSV })
        </td>
    </tr>
}

</table>
